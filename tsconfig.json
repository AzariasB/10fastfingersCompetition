{
    "compilerOptions": {
        "module": "commonjs",
        "alwaysStrict": true,
        "removeComments": true,
        "esModuleInterop": true,   
        "useDefineForClassFields": false,
        "strictNullChecks": true,
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist",
        "noEmitOnError": true,
        "types": [ "chrome" ],
    },
    "exclude": [
        "test"
    ]
}